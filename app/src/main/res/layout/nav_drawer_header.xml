<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="24dp"
    android:background="@drawable/nav_drawer_header_background"
    >

    <ImageView
        android:id="@+id/nav_drawer_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        />

    <TextView
        android:id="@+id/nav_drawer_header_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline1"
        android:textSize="24sp"
        android:text="Not Signed In"
        />

    <TextView
        android:id="@+id/nav_drawer_header_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18sp"
        android:text="Click below to sign in!"
        />

</LinearLayout>